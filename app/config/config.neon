parameters:
	migration:
		dir: '%appDir%/database/migrations'
		phpParams:
			em: @Kdyby\Doctrine\EntityManager
			container: @Nette\DI\Container
	database:
		unix_socket: null

includes:
	- extensions.neon
	- repositories.neon
	- services.neon

php:
	date.timezone: Europe/Prague

application:
	errorPresenter: Error
	mapping:
		*: App\*Module\Presenters\*Presenter
	scanComposer: FALSE

drahak.restful:
	routes:
		autoRebuild: false
